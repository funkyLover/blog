{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "eol-last": 1,
    "valid-jsdoc": 0,
    "indent": 1,
    "semi": 1,
    "strict": [1, "global"],
    "no-console": 0,
    "no-unused-vars": 1,
    "comma-dangle": [1, "always-multiline"],
    "array-bracket-spacing": [1, "never"],
    "object-curly-spacing": [1, "always"],
    "no-multiple-empty-lines": [1, { max: 2 }],
  }
}
